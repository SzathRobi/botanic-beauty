generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Hairdresser {
  Timi 
  nem_Timi
}

type TOffDay{
date                DateTime
displayMonth        DateTime
person              Hairdresser
}

model Schedule {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  offDays           TOffDay[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

type TService {
  id                String
  name              String
  duration          Int
  price             Int
  category          String
}

type TContactInfo {
  name              String
  email             String
  phone             String
  otherInfo         String?
}

model Booking {
  id                String      @id @default(uuid()) @map("_id")
  service           TService
  extraService      TService?
  hairdresser       Hairdresser
  selectedDate      String
  selectedTimeSlot  String
  contactInfo       TContactInfo
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}